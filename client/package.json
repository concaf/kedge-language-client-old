{
  "name": "vscode-k8s",
  "description": "Kubernetes support for VS Code",
  "author": "Gorkem Ercan",
  "contributors": [
    {
      "name": "Joshua Pinkney",
      "email": "jpinkney@redhat.com"
    }
  ],
  "license": "MIT",
  "version": "0.0.1",
  "publisher": "gercan",
  "engines": {
    "vscode": "^1.8.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:yaml"
  ],
  "main": "./out/src/extension",
  "contributes": {
    "configuration": {
      "properties": {
        "yaml.trace.server": {
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VSCode and the yaml language server"
        },
        "yaml.schemas":{
          "type": "object",
          "default":{"Kubernetes":"*"},
          "description": "Associate schemas to Yaml files in the current workspace"
        }
      }
      }
  },
  "scripts": {
    "vscode:prepublish": "tsc -p ./",
    "compile": "tsc -watch -p ./",
    "update-vscode": "node ./node_modules/vscode/bin/install",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "mocha --ui tdd out/test/extension.test.js"
  },
  "devDependencies": {
    "@types/mocha": "^2.2.33",
    "@types/node": "^6.0.52",
    "typescript": "^2.2.2",
    "vscode": "^1.1.0"
  },
  "dependencies": {
    "vscode-languageclient": "3.2.0"
  }
}
